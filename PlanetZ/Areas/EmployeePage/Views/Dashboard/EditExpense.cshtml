@model EditExpenseVM

@{
    ViewData["Title"] = "Edit Expense";
}

<h1 class="text-primary">Edit Expense</h1>

<form asp-action="EditExpense" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id"  />
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="text-dark" asp-for="ExpenseType">Expense  Type</label>
        <select id="expenseTypeList" type="radio" asp-for="ExpenseType" class="form-control" asp-items="@Html.GetEnumSelectList<EnumExpense>()">
        </select>
        <span asp-validation-for="ExpenseType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-dark" asp-for="ExpenseAmount">Expense  Amount</label>
        <input type="text" asp-for="ExpenseAmount" class="form-control" />
        <span asp-validation-for="ExpenseAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="text-dark" asp-for="File">Upload Document</label>
        <input type="file" asp-for="File" class="form-control-file" />
        <span asp-validation-for="File" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Update</button>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}