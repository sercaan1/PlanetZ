@model Wallet
@{
    ViewData["Title"] = "Wallet";
}

<div class="card text-center">
    <div class="card-header">
        <ul class="nav nav-tabs card-header-tabs">
            <li class="nav-item">
                <a class="nav-link active" href="#">Your Balance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="TransferBalance">Transfer Balance</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-action="AddCreditCard">Add Credit Card</a>
            </li>
        </ul>
    </div>
    <div class="card-body">
        <h3 class="text-dark">Your Balance</h3>
        <p class="text-success">₺@Model.Balance</p>
        <a asp-action="TransferBalance" class="btn btn-primary">Transfer Balance</a>
    </div>
</div>