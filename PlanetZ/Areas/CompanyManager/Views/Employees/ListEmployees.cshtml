@model List<ListEmployeeVM>
@{
    ViewData["Title"] = "Employee List";
}
<h1 class="text-primary">Employees List</h1>

<p>
    <a class="btn btn-success" asp-action="CreateEmployee">Create Employee</a>
</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr class="text-info">
            <th>Photo</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>E-Mail</th>
            <th>Activity Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody class="align-items-baseline">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/img/employeePhotos/@item.PhotoPath" alt="Image" width="80" class="rounded" />
                </td>
                <td class="text-dark">@item.FirstName</td>
                <td class="text-dark">@item.LastName</td>
                <td class="text-dark">@item.Email</td>
                <td class="text-white bg-gradient-secondary">@(item.ActivityStatus.ToString())</td>
                <td>
                    <a asp-action="DetailsEmployee" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        const message = "@TempData["message"]";
        if (message){
            successMessage(message);
        }

        $(".table").DataTable({
                "order": []
        });
    </script>
}